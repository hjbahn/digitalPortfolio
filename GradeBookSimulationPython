#Haley Bahn
#Gradebook Problem 


#create gradebook with list of students (rows in table)
grades = [['Munroe'],['Summers'],['Pryde'],['Wagner'],['Grey']]

#add three test scores for each student
for row in range(5):
    
#display the name of the student & prompt for test scores
    print("Scores for " + grades[row][0])
    
#input three scores and place them into students' list
    for x in range(1, 4):
        s = int(input("Enter score #" + str(x) + ": "))
        grades[row].append(s)
    print()
    
#print entire gradebook (unformatted)
print(grades)
print()
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                  
#new student
newStudent = [input("Please enter name of new student: ")]

#add student to list
grades.append(newStudent)
print()

print("Scores for " + grades[grades.index(newStudent)][0])

#add three test scores for new student
for x in range(1, 4):
    s = int(input("Enter score #" + str(x) + ": "))
    grades[grades.index(newStudent)].append(s)

#average the three scores 
for row in range(6):
    x = 1
    scoreAvg = format(float((grades[row][x] + grades[row][x+1] + grades[row][x + 2])/3),'.2f')
    grades[row].append(scoreAvg)
print()

#Determine letter grade
for row in range(6):
    if float(grades[row][4]) >= 90:
        grades[row].append("A")
    elif float(grades[row][4]) <= 90 and float(grades[row][4]) >= 80:
        grades[row].append("B")
    elif float(grades[row][4]) <= 80 and float(grades[row][4]) >= 70:
        grades[row].append("C")
    elif float(grades[row][4]) <= 70 and float(grades[row][4]) >= 60:
        grades[row].append("D")
    else:
        grades[row].append("F")

#Display name, average grade, and letter grade
for row in range(6):
    print()
    print(grades[row][0])
    print("-----------------")
    print("Average Score: ", float(grades[row][4]))
    print("Letter Grade: " + grades[row][5])

        
